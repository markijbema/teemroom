<div class="container">
  <%= form_tag(submit_assessment_path, method: "post", role:"form", class: "form") do %>
    <div class="row">
      <div class="col-sm-6">
        <div class="page-header">
          <h1>Peer Assessments</h1>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-6">
              <h4>Team Name</h4>
            </div>
            <div class="col-sm-6">
              <h4>Student Name</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <p class="small">
              	<%= render "assessments_blurb" %>
              </p>
            </div>
          </div>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-12">
              <h4>Self Assessment</h4>
                <div class="col-sm-12">
                  <p class="small">
                  	<%= render "self_assessment_blurb" %>
                  </p>
                </div>
                <%= render partial: "assessment_dropdown", locals: { assess: @assessment_page.principal } %>
            </div>
          </div>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-12">
              <h4>Team Peer Assessments</h4>
                <div class="col-sm-12">
                  <p class="small">
                    <%= render "peer_assessments_blurb" %>
                  </p>
                </div>
                <% @assessment_page.peers.each do |peer| %>
                  <%= render partial: "assessment_dropdown", locals: { assess: peer } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%= submit_tag("Submit", class: "btn btn-default") %>
    </div>
  <% end %>
