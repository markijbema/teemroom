<div class="container">
  <%= form_tag(submit_assessment_path, method: "post", role:"form", class: "form") do %>
    <div class="row">
      <div class="col-sm-6">
        <div class="page-header">
          <h1>Peer Assessments</h1>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-6">
              <h4>Team Name</h4>
            </div>
            <div class="col-sm-6">
              <h4>Student Name</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <p class="small">
              	<%= render "assessments_blurb" %>
              </p>
            </div>
          </div>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-12">
              <h4>Self Assessment</h4>
                <div class="col-sm-12">
                  <p class="small">
                  	<%= render "self_assessment_blurb" %>
                  </p>
                </div>
                <span>Peer 0</span>
                <%= select_tag(:self_assessment, 
                      options_for_select(
                        [['Awesome', "A"], 
                         ['Sucky', "F"]
                        ]), class: "input-xs") %>
            </div>
          </div>
        </div>
        <div class="well well-sm">
          <div class="row">
            <div class="col-sm-12">
              <h4>Team Peer Assessments</h4>
                <div class="col-sm-12">
                  <p class="small">
                    <%= render "peer_assessments_blurb" %>
                  </p>
                </div>
                <%= render "assessment_dropdown" %>
                <%= render "assessment_dropdown" %>
                <%= render "assessment_dropdown" %>
                <%= render "assessment_dropdown" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%= submit_tag("Submit", class: "btn btn-default") %>
    </div>
  <% end %>
